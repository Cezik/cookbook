<% provide(:title, t('main.edit') + ' - ' + @recipe.title) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t('main.edit') + ' - ' + @recipe.title %></h1>
    <hr/>
    <%= simple_form_for @recipe, url: food_category_recipe_path, :method => :PATCH, wrapper: :horizontal_form do |f| %>
      <%= f.input :title %>
      <%= f.label :difficult, t('activerecord.attributes.recipe.difficult') + ' ' + @recipe.difficult.to_s, class: "recipe_difficult_text" %>
      <br/>
      <%= f.range_field :difficult, :in => 1..5 %>
      <%= f.label t('menu_links.food_category_page') %>
      <%= f.collection_select(:food_category_id, FoodCategory.all, :id, :title) %>
      <%= f.input :recipe_text %>
      <%= f.input :image %>
      <hr/>
      <%= f.button :submit, class: 'btn btn-success' %>
      <% end %>
      <%= link_to t('main.back'), :back, class: 'back-button btn btn-info' %>
  </div>
</div>
