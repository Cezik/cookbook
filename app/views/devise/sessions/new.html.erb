<h1><%= t('menu_links.sign_in_page') %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <hr/>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <hr/>

        <div class="form-actions">
          <%= f.button :submit, t('menu_links.sign_in_page'), class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>
